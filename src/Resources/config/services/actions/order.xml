<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.shop_api_plugin.controller.order.list_action"
                 class="Sylius\ShopApiPlugin\Controller\Order\ListAction"
        >
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="tactician.commandbus" />
        </service>
        <service id="sylius.shop_api_plugin.controller.order.list_awaiting_payment_action"
                 class="Sylius\ShopApiPlugin\Controller\Order\ListAwaitingPaymentAction"
        >
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="tactician.commandbus" />
        </service>
        <service id="sylius.shop_api_plugin.controller.order.view_action"
                 class="Sylius\ShopApiPlugin\Controller\Order\ViewAction"
        >
            <argument type="service" id="sylius.shop_api_plugin.view_repository.cart_view_repository" />
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="tactician.commandbus" />
        </service>
        <service id="sylius.shop_api_plugin.controller.order.pay_action"
                 class="Sylius\ShopApiPlugin\Controller\Order\PayAction"
        >
            <argument type="service" id="payum" />
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="fos_rest.view_handler" />
            <argument type="service" id="tactician.commandbus" />
        </service>
    </services>
</container>
